<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.description[0..50] %><%="..." if product.description.length > 50 %></td>
    <td><%= product.price %></td>
	<td><%= button_to "Buy", { :action => "add_product", :product_id => product.id }, :method => :post %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
