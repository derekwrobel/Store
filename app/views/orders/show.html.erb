<p id="notice"><%= notice %></p>

<p>
  <b>Customer:</b>
  <%= @order.customer_id %>
</p>

<p>
  <b>Date ordered:</b>
  <%= @order.date_ordered %>
</p>

<p>
	
  <b>Products:</b>
<table>
  <tr>
    <th>Product Name</th>
	<th>Price</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @order.order_products.each do |order_product| %>
  <tr>
    <td><%= order_product.product.name %></td>	  
	<td><%= order_product.quantity %></td>
	<td><%= order_product.product.price %></td>
  </tr>
<% end %>
</table>
<p>
  <b>Total:</b>
  <%= @order.total %>
</p>




