<p id="notice"><%= notice %></p>

<p>
  <b>Customer:</b>
  <%= @customer_order.customer_id %>
</p>

<p>
  <b>Date ordered:</b>
  <%= @customer_order.date_ordered %>
</p>

<p>
	
  <b>Products:</b>
<table>
  <tr>
    <th>Product Name</th>
	<th>Price</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @customer_order.products.each do |order_products| %>
  <tr>
    <td><%= order_products.name %></td>
	<% @customer_order.customer_order_products.each do |customer_order_products| %>
	  
	    <td><%= customer_order_products.quantity %></td>
		
		
	  
	<% end %>
	<td><%= order_products.price %></td>
  </tr>
<% end %>
</table>
<p>
  <b>Total:</b>
  <%= @customer_order.total %>
</p>




